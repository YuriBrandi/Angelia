{
    "manifest_version": 2,
    "name": "Angelia",
    "version": "1.0",
  
    "description": "A Fake news detector based on NLP Machine Learning models.",
  
    "permissions": [
      "tabs"
    ],

    "icons": {
      "48": "icons/48x48.png",
      "96": "icons/96x96.png"
    },

    "browser_action": {
      "browser_style": true,
      "default_icon": "icons/96x96.png",
      "default_title": "Is this news Fake?",
      "default_popup": "popup/index.html"
    },
  
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "js/find_title.js"
        ],
        "all_frames": false,
        "run_at": "document_idle"
      }
    ]
  }
  